                <plugin>
                    <groupId>de.bb.tools.bnm.plugin</groupId>
                    <artifactId>flex-plugin</artifactId>
                    <version>0.2.7-SNAPSHOT</version>
                    <replaces>
                        <replace>org.sonatype.flexmojos:flexmojos-maven-plugin</replace>
                    </replaces>
