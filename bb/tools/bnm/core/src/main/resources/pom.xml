				</plugin>
				<plugin>
					<groupId>de.bb.tools.bnm.plugin</groupId>
					<artifactId>jar-plugin</artifactId>
					<version>0.2.7-SNAPSHOT</version>
					<replaces>
						<replace>org.apache.maven.plugins:maven-jar-plugin</replace>
                        <replace>org.apache.maven.plugins:maven-ejb-plugin</replace>
                        <replace>org.apache.maven.plugins:maven-ear-plugin</replace>
                        <replace>org.apache.maven.plugins:maven-war-plugin</replace>
