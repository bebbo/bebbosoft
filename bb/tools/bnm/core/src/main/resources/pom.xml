					<version>0.2.7-SNAPSHOT</version>
					<replaces>
						<replace>org.apache.maven.plugins:maven-exec-plugin</replace>
                        <replace>org.codehaus.mojo:exec-maven-plugin</replace>
					</replaces>
				</plugin>
				<plugin>
					<groupId>de.bb.tools.bnm.plugin</groupId>
					<artifactId>clean-plugin</artifactId>
					<version>0.2.7-SNAPSHOT</version>
